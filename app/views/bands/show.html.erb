<%= render "layouts/errors" %>

<h2><%= @band.name %></h2>

<% if @tag %>
    <%= button_to "Remove Tag", "/bands/#{@band.id}/tags/#{@tag.id}", method: :delete%>
<% else %>
    <%= button_to "Tag", band_tags_url(@band), method: :post%>
<% end %>

<ul>
    <% @band.albums.each do |album| %>
        <li><%= button_to album.title, album_url(album), method: :get%></li>
    <%end%>
</ul>

<% if current_user_admin? %>
    <ul>
        <li><%= button_to "New Album", new_band_album_url(@band), method: :get%></li>
        <li><%= button_to "Edit Band", edit_band_url(@band), method: :get%></li>
        <li><%= button_to "Delete Band", band_url(@band), method: :delete%></li>
        <li><%= button_to "All Bands", bands_url, method: :get%></li>
    </ul>
<% end %>